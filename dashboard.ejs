<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Facebook Profile Clone</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f0f2f5;
            margin: 0;
            padding: 0;
            background-image: url(https://img.freepik.com/premium-vector/facebook-background-with-likes-hearts_23-2147857750.jpg);
            background-size: cover;
        }
        .container {
            display: flex;
            max-width: 1000px;
            margin: 50px auto;
            gap: 20px;
        }
        .column {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            background: white;
        }
        .left, .right {
            width: 25%;
        }
        .center {
            width: 50%;
        }
        .profile-header {
            text-align: center;
            padding: 20px;
            background: #1877f2;
            color: white;
            border-radius: 10px 10px 0 0;
        }
        .profile-info {
            padding: 15px;
            text-align: center;
        }
        .profile-info p {
            margin: 5px 0;
            font-size: 14px;
            color: #555;
        }
        input, textarea {
            width: calc(100% - 20px);
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            display: block;
        }
        button {
            width: 100%;
            background: #1877f2;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }
        button:hover {
            background: #166fe5;
        }
        .posts {
            margin-top: 20px;
        }
        .post {
            background: #fff;
            padding: 15px;
            margin-top: 10px;
            border-radius: 10px;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
        }
        .post p {
            margin: 0;
            font-size: 14px;
            color: #333;
        }
        .right h3, .left h3 {
            text-align: center;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Left Sidebar -->
        <div class="column left">
            <div class="profile-header">Profile</div>
            <div class="profile-info">
                <p><strong>Name:</strong> <span id="profileName">User</span></p>
                <p><strong>Email:</strong> <span id="profileEmail">user@example.com</span></p>
                <p><strong>Bio:</strong> <span id="profileBio">This is my bio.</span></p>
            </div>
        </div>
        
        <!-- Center Content (Main Area) -->
        <div class="column center">
            <h2 style="text-align:center; color:#1877f2;">Facebook</h2>
            <input type="text" id="username" placeholder="Enter your name">
            <input type="email" id="email" placeholder="Enter your email">
            <textarea id="bio" placeholder="Enter a short bio"></textarea>
            <button onclick="updateProfile()">Update Profile</button>
            <textarea id="postContent" placeholder="What's on your mind?" rows="3"></textarea>
            <button onclick="addPost()">Post</button>
            <div class="posts" id="posts"></div>
        </div>
        
        <!-- Right Sidebar (Friends List) -->
        <div class="column right">
            <h3>Friends List</h3>
            <p>Pranab Sharma</p>
            <p>Rohit Negi</p>
            <p>Manish Singh</p>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        function updateProfile() {
            let username = document.getElementById('username').value;
            let email = document.getElementById('email').value;
            let bio = document.getElementById('bio').value;

            if (username && email && bio) {
                document.getElementById('profileName').innerText = username;
                document.getElementById('profileEmail').innerText = email;
                document.getElementById('profileBio').innerText = bio;
            } else {
                alert('Please fill in all fields');
            }
        }

        function addPost() {
            let postContent = document.getElementById('postContent').value;
            if (postContent) {
                let postContainer = document.createElement('div');
                postContainer.className = 'post';
                postContainer.innerHTML = `<p>${postContent}</p>`;
                document.getElementById('posts').prepend(postContainer);
                document.getElementById('postContent').value = '';
            } else {
                alert('Post content cannot be empty');
            }
        }
    </script>
</body>
</html>
